{
  "packageManager": "yarn@4.2.2",
  "repository": "github:frankieali/infima-inputs",
  "author": "Frank Ali",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "website"
  ],
  "private": true,
  "scripts": {
    "format": "prettier --config .prettierrc --write --ignore-unknown \"**/*\"",
    "format:check": "prettier --config .prettierrc --check --ignore-unknown \"**/*\"",
    "lint": "stylelint \"**/*.pcss\"",
    "lint:fix": "stylelint \"**/*.pcss\" --fix",
    "start": "cd packages/core && npm start",
    "build": "yarn workspace infima-inputs build",
    "build:en": "yarn workspace infima-inputs build --locale en",
    "website:start": "yarn workspace infima-inputs-website start",
    "website:build": "yarn workspace infima-inputs-website build",
    "website:serve": "yarn workspace infima-inputs-website serve",
    "website:deploy": "yarn workspace infima-inputs-website deploy",
    "website:clear": "yarn workspace infima-inputs-website clear",
    "lock:update": "yarn dedupe --mode=update-lockfile",
    "postinstall": "yarn lock:update"
  },
  "devDependencies": {
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.8.0",
    "stylelint-high-performance-animation": "^1.10.0",
    "stylelint-order": "^6.0.4"
  }
}
